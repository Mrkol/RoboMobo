<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton" android:layout_alignLeft="@+id/lv_devices"
            android:layout_alignParentTop="true" android:checked="false" android:onClick="toggleServer"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/toggleButton" android:layout_alignBottom="@+id/toggleButton"
            android:layout_alignTop="@+id/toggleButton" android:gravity="center_vertical"
            android:textColor="#ffffff"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/lv_devices"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView"/>
</RelativeLayout>

